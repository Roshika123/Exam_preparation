<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/content_home">

    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation" />
    
    <Button
        android:id="@+id/startbtn1"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="CS Exam Study"
        style="bold"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintStart_toStartOf="@id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="@id/nav_host_fragment"/>

    <Button
        android:id="@+id/startbtn2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="CS Quiz"
        style="bold"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintStart_toStartOf="@id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="@id/nav_host_fragment"/>



    <Button
        android:id="@+id/startbtn3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Full forms"
        style="bold"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintStart_toStartOf="@id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="@id/nav_host_fragment"/>

    <Button
        android:id="@+id/startbtn4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Shortcut keys"
        style="bold"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="260dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintStart_toStartOf="@id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="@id/nav_host_fragment"/>

    <Button
        android:id="@+id/startbtn5"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Most Important Questions"
        style="bold"
        android:textSize="18dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="340dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintStart_toStartOf="@id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="@id/nav_host_fragment"/>

    <Button
        android:id="@+id/startbtn6"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Solved Answer of C programming"
        style="bold"
        android:textSize="16dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="420dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintStart_toStartOf="@id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="@id/nav_host_fragment"/>


    
</androidx.constraintlayout.widget.ConstraintLayout>